{
  "name": "react-express-template",
  "version": "1.0.0",
  "description": "React-Express Template",
  "main": "server.js",
  "engines": {
    "node": "8.1.4",
    "npm": "5.4.1"
  },
  "scripts": {
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm run start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client",
    "test": "mocha"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/German91/react-express-template.git"
  },
  "keywords": [
    "React",
    "Express",
    "Mongo",
    "Boileplate",
    "Redux"
  ],
  "author": "German Hernandez del Rosario",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/German91/react-express-template/issues"
  },
  "homepage": "https://github.com/German91/react-express-template#readme",
  "dependencies": {
    "bcrypt": "^1.0.3",
    "body-parser": "^1.18.1",
    "compression": "^1.7.0",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "dotenv": "^4.0.0",
    "email-templates": "^2.7.1",
    "express": "^4.15.4",
    "handlebars": "^4.0.10",
    "helmet": "^3.8.1",
    "jsonwebtoken": "^8.0.1",
    "lodash": "^4.17.4",
    "method-override": "^2.3.9",
    "mongoose": "^4.11.11",
    "mongoose-timestamps": "0.0.1",
    "mongoose-unique-validator": "^1.0.6",
    "morgan": "^1.8.2",
    "node-sass": "^4.5.3",
    "nodemailer": "^4.1.0",
    "validator": "^8.2.0"
  },
  "devDependencies": {
    "concurrently": "^3.5.0",
    "mocha": "^3.5.3",
    "nodemon": "^1.12.0"
  }
}
